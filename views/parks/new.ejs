<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Park</h1>
  <div class="col-6 offset-3">
    <form action="/parks" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="park[title]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="park[location]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input class="form-control" type="text" id="image" name="park[image]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Park Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">â‚¹</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="park[price]"
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="park[description]"
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Park</button>
      </div>
    </form>
    <a href="/parks">All Parks</a>
  </div>
</div>
